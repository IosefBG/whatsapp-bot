<!DOCTYPE html>
<html lang="{{lang}}">
<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Dashboard - {{title}}</title>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/typeahead.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[name="phnr"]').typeahead({
                name: 'phnr',
                remote: 'http://localhost:80/search/nr?key=%QUERY',
                limit: 10
            });
            $('input[name="fname"]').typeahead({
                name: 'fname',
                remote: 'http://localhost:80/search/name?key=%QUERY',
                limit: 10
            });
        });
    </script>
    <style>
        .typeahead {
            background-color: #FFFFFF;
        }

        .typeahead:focus {
            border: 2px solid #0097CF;
        }

        .tt-query {
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
        }

        .tt-hint {
            color: #fff;
        }

        .tt-dropdown-menu {
            background-color: #FFFFFF;
            border: 1px solid rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            margin-top: 12px;
            padding: 8px 0;
            width: 422px;
        }

        .tt-suggestion {
            font-size: 24px;
            line-height: 24px;
            padding: 3px 20px;
        }

        .tt-suggestion.tt-is-under-cursor {
            background-color: #0097CF;
            color: #FFFFFF;
        }

        .tt-suggestion p {
            margin: 0;
        }
    </style>

</head>
<body>
<div class="cheader">
    {{>PCnheader}}
    <div class="content" style="background-color:#fff">
        <div class="p-2">

            <div class="row">
                <div class="col-md-6 col-lg-2"><label>Search by P.N.</label>
                    <div class="input-group rounded">
                        <form action="/account/info/1" method="post">
                            <div class="row">
                                <div class="col-8">
                                    <input type="search" name="phnr" class="form-control rounded" autocomplete="off"
                                           spellcheck="false" placeholder="Search" aria-label="Search">
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6 col-lg-2"><label>Search by Name</label>
                    <div class="input-group rounded">
                        <form action="/account/info/1" method="post">
                            <div class="row">
                                <div class="col-8">
                                    <input type="search" name="fname" class="form-control rounded" autocomplete="off"
                                           spellcheck="false" placeholder="Search" aria-label="Search">
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3"><label>Search by Date</label>
                    <div class="input-group rounded">
                        <form action="/account/info/1" method="post">
                            <div class="row">
                                <div class="col-8">
                                    <input type="date" name="fdate" id="fdate" class="form-control rounded"
                                           autocomplete="off"
                                           spellcheck="false" placeholder="Search" aria-label="Search"
                                           value="2023-01-01"
                                           min="2018-01-01" max="2023-01-01">
                                </div>
                                <div class="col-4">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="input-group rounded">
                        <form action="/account/info/raport" method="post">
                            <div class="row">
                                <div class="col-4"><label>From Date</label>
                                    <input type="date" name="dates" id="fdate1" class="form-control rounded"
                                           autocomplete="off"
                                           spellcheck="false" placeholder="Search" aria-label="Search"
                                           value="2023-01-01"
                                           min="2018-01-01" max="2023-01-01">
                                </div>
                                <div class="col-4"><label>To Date</label>
                                    <input type="date" name="datef" id="fdate2" class="form-control rounded"
                                           autocomplete="off"
                                           spellcheck="false" placeholder="Search" aria-label="Search"
                                           value="2023-01-01"
                                           min="2018-01-01" max="2023-01-01">
                                </div>
                                <div class="col-4 mt-4">
                                    <button class="btn btn-outline-success" type="submit">Generate raport</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Nr. Tel.</th>
                <th scope="col">Nume</th>
                <th scope="col">Nr. Inmatr.</th>
                <th scope="col">Km</th>
                <th scope="col">Dovada</th>
            </tr>
            </thead>
            <tbody>

            {{#each items}}
                <tr>
                    <td>{{timestamp}}</td>
                    <td>{{nr}}</td>
                    <td>{{name}}</td>
                    <td>{{nrinmatr}}</td>
                    <td>{{km}}</td>
                    <td>
                        <a href="#" id="pop_{{id}}">
                            <img id="imagesource_{{id}}" src="/img/km/{{img}}.jpeg"
                                 style="width: 200px; height: 100px;">
                        </a>

                        <div class="modal" id="imagemodal_{{id}}" tabindex="-1">
                            <div class="modal-dialog" style="width: auto;">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <img src="/img/km/{{img}}.jpeg" id="imagepreview_{{id}}"
                                             style="width: 100%; height: 300px;object-fit: fill;">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            {{/each}}

            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            {{{ pages }}}
        </div>
    </div>
</div>
</body>
<script type="text/javascript">
        {{#each items}}
        $("#pop_{{id}}").on("click", function () {
            $('#imagepreview_{{id}}').attr('src', $('#imagesource_{{id}}').attr('src')); // here asign the image to the modal when the user click the enlarge link
            $('#imagemodal_{{id}}').modal('show'); // imagemodal is the id attribute assigned to the bootstrap modal, then i use the show function
        });
        {{/each}}

    const currentdate = new Date();
    var month = currentdate.getMonth() + 1;
    if (month.length !== 2) {
        month = "0" + month;
    }
    const this_day = currentdate.getFullYear() + "-" + month + "-" + currentdate.getDate();
    document.getElementById("fdate").value = this_day;
    document.getElementById("fdate").max = this_day;
    document.getElementById("fdate1").value = this_day;
    document.getElementById("fdate1").max = this_day;
    document.getElementById("fdate2").value = this_day;
    document.getElementById("fdate2").max = this_day;

</script>
