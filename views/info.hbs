<script type="text/javascript" src="/js/nmain.js"></script>
<script type="text/javascript">
    {{#each items}}
    $("#pop_{{id}}").on("click", function() {
        $('#imagepreview_{{id}}').attr('src', $('#imagesource_{{id}}').attr('src')); // here asign the image to the modal when the user click the enlarge link
        $('#imagemodal_{{id}}').modal('show'); // imagemodal is the id attribute assigned to the bootstrap modal, then i use the show function
    });
    {{/each}}

</script>
